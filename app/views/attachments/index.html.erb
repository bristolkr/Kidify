<div class="container">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header"><%= @group.name %>'s Photos</h1>
            <%= link_to 'Add Photo', new_group_attachment_path %>
        </div>

        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <!-- <a class="thumbnail"> -->
                <% if @group.attachments.blank? %>
                  <%= image_tag 'placeholder.png' %>
                <% else %>
                  <% @group.attachments.each do |attachment| %>
                    <%= image_tag(attachment.image.url) %>
                    <%= attachment.caption %>
                  <% end %>
                <% end %>
            <!-- </a> -->
        </div>
    </div>
</div>
