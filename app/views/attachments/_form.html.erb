<%= form_for Attachment.new, html: { class: "form-horizontal", role: "form", multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :document, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :document %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
