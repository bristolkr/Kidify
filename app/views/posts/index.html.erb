<h1 class="page-header"><%= @group.name %>'s Posts</h1>
<%= link_to 'New Post', new_group_post_path(@group), :class => 'btn btn-primary btn-lg pull-left' %>

<div class="row"></div>

  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-sm-8 blog-main">
        <div class="blog-post">
          <h2 class="blog-post-title"><%= link_to(post.title, [@group, post]) %></h2>
          <p class="author">Submitted <%= time_ago_in_words(post.created_at) %> by <%= post.user.email %></p>
          <p class="blog-post-body"><%= post.body %></p>
          <p class="blog-post-tags">Tags: <%= post.all_tags %></p>
        </div>
      </div>
    </div>
  <% end %>

<%= paginate @posts %>
