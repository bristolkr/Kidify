<div class="page-header">
  <h1>Listing Groups</h1>
</div>

<div class="row">
  <div class="col-md-10">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.name %></td>
            <td><%= group.description %></td>
            <% if group.user == current_user %>
              <td><%= link_to 'Show', group, :class => 'btn btn-primary btn-sm pull-left' %></td>
              <td><%= link_to 'Edit', edit_group_path(group), :class => 'btn btn-warning btn-sm pull-left' %></td>
              <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-sm pull-left' %></td>
            <% else %>
              <td colspan="3"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Group', new_group_path, :class => 'btn btn-primary btn-sm pull-left'%>
